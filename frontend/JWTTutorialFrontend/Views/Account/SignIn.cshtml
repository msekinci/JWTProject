@model AppUserSignIn

<form method="POST" class="w-50 mx-auto p-3 mt-4" asp-action="SignIn">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label>Username</label>
        <span asp-validation-for="@Model.UserName"></span>
        <input asp-for="@Model.UserName" class="form-control" type="text">
    </div>
    <div class="form-group">
        <label>Password</label>
        <span asp-validation-for="@Model.Password"></span>
        <input asp-for="@Model.Password" class="form-control">
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Sign In</button>
        <a asp-action="SignUp" asp-controller="Account">You don't have an account? Sign Up</a>
    </div>
</form>